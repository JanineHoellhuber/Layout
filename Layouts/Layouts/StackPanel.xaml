<Window x:Class="Layouts.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts"
        mc:Ignorable="d"
        Title="StackPanel" Height="160" Width="300">
    <StackPanel>

        <StackPanel Height="30" Orientation="Horizontal">
            <TextBlock Text="Feld 1" Width="100" HorizontalAlignment="Left"/>
            <TextBox Width="50" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Height="30" Orientation="Horizontal">
            <TextBlock Text="Feld 2" Width="100" HorizontalAlignment="Left"/>
            <TextBox Width="50" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Height="30" Orientation="Horizontal">
            <TextBlock Text="Feld 3" Width="100" HorizontalAlignment="Left"/>
            <TextBox Width="50" HorizontalAlignment="Right"/>
        </StackPanel>


    </StackPanel>
</Window>
